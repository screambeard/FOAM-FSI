#!/bin/bash

#script location
DIR="$(cd "$(dirname "$0")" && pwd)"
scriptName="plotOuterCorrectors.gnuplot"
scriptDir=$DIR"/"$scriptName

#os determination
platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == "Linux" ]]; then
	platform='linux'
elif [[ "$unamestr" == 'Darwin' ]]; then
	platform='osx'
fi

echo "OS = $platform"

#check log argument
if [ "$#" -ne 1 ]; then
	echo "Need argument for log file"
	exit 0
fi

#Do foamLogPimple first
echo "Executing: foamLogPimple $1"
foamLogPimple $1

echo "Plotting #outerCorrectors"
gnuplot $scriptDir
