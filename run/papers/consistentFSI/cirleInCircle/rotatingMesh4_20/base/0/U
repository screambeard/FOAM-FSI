FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    frontAndBack
    {
        type            empty;
    }
    outside
    {
        type            rotatingWallVelocitySmooth;
        origin          (0 0 0);
        axis            (0 0 1);
        omega           10;
		T0				0.1;
    }

    inside
    {
        type            slip;
    }
}


