FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
	p
	{
		solver           GAMG;
		tolerance        1e-8;
		relTol           0.1;
		smoother         GaussSeidel;
		nPreSweeps       0;
		nPostSweeps      2;
		cacheAgglomeration on;
		agglomerator     faceAreaPair;
		nCellsInCoarsestLevel 100;
		mergeLevels      1;
	}
    
	pFinal
	{
		solver           GAMG;
		tolerance        1e-5;
		relTol           0.001;
		smoother         GaussSeidel;
		nPreSweeps       0;
		nPostSweeps      2;
		cacheAgglomeration on;
		agglomerator     faceAreaPair;
		nCellsInCoarsestLevel 100;
		mergeLevels      1;
	}
    
    U
    {
        solver          smoothSolver;
        smoother		GaussSeidel;
        tolerance       1e-8;
        relTol          0.01;
    }
    
    UFinal
    {
        solver          smoothSolver;
        smoother		GaussSeidel;
        tolerance       1e-8;
        relTol          0.0;
    }
   
    "(k|omega)"
    {
        solver           smoothSolver;
        smoother         GaussSeidel;
        tolerance        1e-8;
        relTol           0.001;
        nSweeps          1;
    }
}

PIMPLE
{   
    nOuterCorrectors 1;
    nCorrectors      2;
    nNonOrthogonalCorrectors 2;
    pRefCell        0;
    pRefValue       0;
} 

relaxationFactors
{
	p 0.4;
	U 0.8;
	k 0.8;
	omega 0.8;
}


