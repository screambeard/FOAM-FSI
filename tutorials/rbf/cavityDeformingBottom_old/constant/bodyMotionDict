FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      bodyMotionDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

bodyMotions ( bottom );

bottomDict
{
    type sphericalExpansion;
    patches (bottom);

    initialRadius 0.2;
    amplitude 0.2;
    frequency 2;
    origin (0.5 0.5 -0.2);

    write true;
}
